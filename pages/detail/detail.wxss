.content {
    width: 750rpx;
    height: 100vh;
}

.top {
    width:750rpx;
    height: 60%;
}

.top image {
    width:100%;
    height: 100%;
}


.mid {
    width:750rpx;
    height: 30%;
    display: flex;
    flex-direction: column;
}

.mid-top {
    width: 100%;
    height: 100%;
    
    display: flex;
    flex-direction: row;
}

.left {
    width : 70%;
    height: 100%;
    
    display: flex;
    flex-direction: column;
} 
.fName {
    width : 100%;
    height: 100%;
    padding-left: 30rpx;
    font-weight: bold;
    font-size: 38rpx;

}

 .fPrice {
    width : 100%;
    height: 100%;
    padding-left: 30rpx;
    color: red;
} 

.right {
    width : 30%;
    height: 100%;
    display:flex;
    flex-direction: row;
    align-items: center;
    color: gray;
    font-size: 30rpx;
}
.mid-bottom {
    width: 690rpx;
    height: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: gray;
    font-size: 28rpx;
}


.bottom {
    width: 750rpx;
    height: 10%;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
}

.kefu {
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.img{
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.img image{
    width: 50%;
    height: 100%;
   
}
.wenzi{
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

 .shoucang {
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.cart {
    width: 30%;
    height: 100%;
    background-color: rgb(139, 0, 116);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: snow;
}

.pay {
    width: 30%;
    height: 100%;
    background-color: green;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: snow;
}