.content{
    width: 750rpx;
    font-size: 32rpx;
}

.cart-list {
    width: 750rpx;
    height: 90vh;
}

.item{
    width: 700rpx;
    height: 200rpx;
    background-color: azure;
    padding-left: 25rpx;
    padding-right: 25rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
}

.selectAll{
    width: 100rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.img{
    width: 200rpx;
    height: 170rpx;
    
}

.img image{
    width: 100%;
    height: 100%;
}

.cart-name{
    width: 150rpx;
    height: 170rpx;
    
    display: flex;
    flex-direction: column;
   
}
.name{
    width: 150rpx;
    height: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 20rpx;
}
.price{
    width: 150rpx;
    height: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 20rpx;
    color:red;
}

.caozuo{
    width: 350rpx;
    height: 170rpx;
    display: flex;
    flex-direction: column;
}

.del{
    width: 310rpx;
    height: 50%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-top: 30rpx;
    padding-right: 40rpx;
    font-size: 36rpx;
    font-weight: bold;
    color:#ccc;
}

.count{
    width: 350rpx;
    height: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}
.prep{
    width: 80rpx;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: darkgrey;
    border:1px solid white;
    border-radius: 15rpx;
}
.num{
    width: 80rpx;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    background-color: rgb(248,242,242);
    border-top: 1rpx solid #fff;
    border-bottom: 1rpx solid #fff;
}

.add{
    width: 80rpx;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: darkgrey;
    border:1px solid white;
    border-radius: 15rpx;
}

.cart-footer {
    width: 750rpx;
    background-color: rgb(154, 219, 23);
    height: 10vh;
    display: flex;
    flex-direction: row;
}

.left{
    width: 500rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;

}

.left .selectAll{
    width: 100rpx;
    height: 100rpx;
}
.left .fuhao{
    width: 200rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.left .price{
    width: 300rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.right{
    width: 200rpx;
    height: 100rpx;
    padding-right: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.pay{
    width: 200rpx;
    height: 90rpx;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: rgb(168, 100, 11);
    border-radius: 20rpx;
    color:white;
}