.content{
    width: 750rpx;
    height: 100vh;
    
}

.top{
    width: 750rpx;
    height: 10%;
    background-color: #ccc;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}   

.search{
    width: 700rpx;
    height: 80%;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content:flex-start;
    padding-left: 30rpx;
}

.bottom{
    width: 750rpx;
    height: 85%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.left{
    width: 250rpx;
    height: 100%;
    background-color: rgb(245, 240, 240);
}

.sp{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.type {
    width: 100%;
    height: 10%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #ccc;
}

.selected{
    background-color: white;
}


.right{
    width: 500rpx;
    height: 100%;
    
}   

.food-row{
    width: 500rpx;
    /* height: 200rpx; */
    display: flex;
    flex-flow: row wrap;
    padding-top: 20rpx;
}

.food-item{
    width: 220rpx;
    height: 300rpx; 
    
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.food-item .img{
    width: 200rpx;
    height: 230rpx;
    
}

.food-item .img image {
    width: 100%;
    height: 100%;
}

.food-item .foodname{
    width: 200rpx;
    height: 70rpx;
    
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color:#888;
}
